<head>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
</head>
<body>
    <div>
        <h1>Welcome!</h1>
    </div>
    <form action="/register" method="post">
        <div class="form-group">
            <input autocomplete="off" autofocusclass="form-control" name="account" placeholder="使用者名稱" type="text"/>
        </div>
        <div class="form-group">
            <input autocomplete="off" autofocusclass="form-control" name="password" placeholder="密碼" type="password"/>
        </div>
        <div class="form-group">
            <input autocomplete="off" autofocusclass="form-control" name="passwordAgain" placeholder="密碼再確認" type="password"/>
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
    </form>
</body>